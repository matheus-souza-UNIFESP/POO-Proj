datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Class {
  id          Int       @id @default(autoincrement())
  day         Int
  time        Int
  classroom   Int
  subjectId   Int
  subject     Subject   @relation(fields: [subjectId], references: [id])
}

model Schedule {
  id          Int       @id @default(autoincrement())
  name        String
  subjects    Subject[]
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

}

model Subject {
  id          Int       @id @default(autoincrement())
  name        String
  professor   String
  classes     Class[]
  schedules   Schedule[]
}

model User {
  id          Int       @id @default(autoincrement())
  username    String
  password    String    //HASHED
  isAdmin     Boolean   @default(false)
  schedules   Schedule[]
}
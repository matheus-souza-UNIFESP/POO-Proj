datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

enum DayOfWeek {
  monday
  tuesday
  wednesday
  thursday
  friday
}

model Subject {
  id          Int      @id @default(autoincrement())
  name        String
  professor   String
  description String?
  dayOfWeeks  dayOfWeek[]    // ex: "monday", "tuesday"
  startTime   Int    // ex: 1=08h, 2=10h ... 6=21h
}
